{
  "name": "learning-react-roadmap",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "volta": {
    "node": "22.12.0",
    "npm": "10.8.1"
  },
  "scripts": {
    "format": "prettier -w .",
    "lint": "eslint .",
    "dev:w1": "npm -w apps/vanilla-todo run dev",
    "dev:w2": "npm -w apps/http-search run dev",
    "dev:react": "npm -w apps/react-ts-app run dev",
    "test:react": "npm -w apps/react-ts-app run test",
    "dev:cap": "npm -w apps/next-capstone run dev"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "eslint": "^9.33.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.1"
  }
}
